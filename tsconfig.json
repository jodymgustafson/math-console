{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "baseUrl": "./node_modules",
        "outDir": "build",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["./node_modules", "./dist"]
}